@model ProjectMVC.Models.Campany

@{
    ViewData["Title"] = "New";
    Layout = "_MainLayout";
}

<div class="container">
    <h1 class="text-center">Add New Company</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="SaveNew" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Company Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
        </div>
    </div>
</div>
