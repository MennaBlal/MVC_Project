
@{
    ViewData["Title"] = "CampaniesJob";
    Layout = "_CampanyLayout";
}
}


@model List<Job>

<div class="container-xxl py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">JOBS</h1>
        <div class="row g-4">
            @foreach (Job job in Model)
            {
                        <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                            <a class="cat-item rounded p-4">
                                    <h6 class="mb-3"><strong>Job Name:</strong>@job.Name</h6>
                                    <p class="mb-1"><strong>Type:</strong> @job.Type</p> 
                                    <p class="mb-0"><strong>Position:</strong> @job.Position</p>
                                    <p><strong>Job Description:</strong>@job.Description</p>
                            </a>
                        </div>
            }
        </div>
    </div>
</div>
