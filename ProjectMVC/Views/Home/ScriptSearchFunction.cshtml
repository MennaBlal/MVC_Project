@{
    Layout = "";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>

    $(document).ready(function () {
        function Search() {
            var cateid = $("#CateId").val();
            var jobName = $("#jobName").val();
            var location = $("#locationid").val();
            if ((cateid != null) || (jobName != null) || (location != null)) {
                console.log(cateid, jobName, location);
                $.ajax(
                    {

                        url: `/Search/Search/?JobName=${jobName}&CategoryId=${cateid}&Location=${location}`
                        , success: function (result) {

                            $(".Alljobs").empty();
                            $(".Full_time_Jobs").empty();
                            $(".Part_time_job").empty();
                            console.log(result);
                            $.each(result, function (key, value) {
                                $(".Alljobs").append(`<div class="job-item p-4 mb-4">
                                            <div class="row g-4">
                                                <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                                    <img class="flex-shrink-0 img-fluid border rounded" src="/img/com-logo-1.jpg" alt="" style="width: 80px; height: 80px;">
                                                    <div class="text-start ps-4">
                                                                <h5 class="mb-3">${value.name}</h5>
                                                                         <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>${value.location}</span>
                                                                          <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>${value.type}</span>
                                                                          <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>$${value.salary}</span>


                                                     </div>
                                                </div>
                                                <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                                    <div class="d-flex mb-3">
                                                        <a class="btn btn-light btn-square me-3" href=""><i class="far fa-heart text-primary"></i></a>
                                                        <a class="btn btn-primary" href="">Apply Now</a>
                                                    </div>
                                                                    <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>Date Line: ${value.dateTime}</small>
                                                </div>
                                            </div>
                                        </div>`);
                                console.log(value.type);
                                if (value.type == "Full Time") {
                                    $(".Full_time_Jobs").append(`<div class="job-item p-4 mb-4">
                                                    <div class="row g-4">
                                                        <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                                            <img class="flex-shrink-0 img-fluid border rounded" src="/img/com-logo-1.jpg" alt="" style="width: 80px; height: 80px;">
                                                            <div class="text-start ps-4">
                                                                    <h5 class="mb-3">${value.name}</h5>
                                                                                 <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>${value.location}</span>

                                                                                <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>${value.type}</span>
                                                                                             <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>$${value.salary}</span>

                                                            </div>
                                                        </div>
                                                        <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                                            <div class="d-flex mb-3">
                                                                <a class="btn btn-light btn-square me-3" href=""><i class="far fa-heart text-primary"></i></a>
                                                                <a class="btn btn-primary" href="">Apply Now</a>
                                                            </div>
                                                                        <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>Date Line: ${value.dateTime}</small>
                                                        </div>
                                                    </div>
                                                </div>`);


                                }
                                ///////////////////////
                                if (value.type == "Part Time") {

                                    $(".Part_time_job").append(`<div class="job-item p-4 mb-4">
                                                        <div class="row g-4">
                                                            <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                                                <img class="flex-shrink-0 img-fluid border rounded" src="/img/com-logo-1.jpg" alt="" style="width: 80px; height: 80px;">
                                                                <div class="text-start ps-4">
                                                                        <h5 class="mb-3">${value.name}</h5>
                                                                                <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>${value.location}</span>

                                                                            <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>${value.type}</span>
                                                                                         <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>$${value.salary}</span>

                                                                 </div>
                                                            </div>
                                                            <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                                                <div class="d-flex mb-3">
                                                                    <a class="btn btn-light btn-square me-3" href=""><i class="far fa-heart text-primary"></i></a>
                                                                    <a class="btn btn-primary" href="">Apply Now</a>
                                                                </div>
                                                                            <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>Date Line: ${value.dateTime}</small>
                                                            </div>
                                                        </div>
                                                    </div>`

                                    );


                                }



                            });////

                        }/////
                    });///


            }//
        }//
        $("#searchBtn").on("click", Search);

    }//
    )//
</script>

