@{
    ViewData["Title"] = "Apply";
    Layout = "_ApplyForJobLayout";
}

<style>
    .success-page {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
    }

    .success-message {
        font-size: 24px;
        color: green;
        margin-bottom: 20px;
    }

    .redirect-button {
        padding: 10px 20px;
        background-color: #007bff;
        color: #ffff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .redirect-button:hover {
            background-color: #0056b3;
        }
</style>

<div class="success-page">
    <div class="success-message">
        Application Operation Succeeded!
    </div>
    <a href="@Url.Action("Index", "Home")" class="redirect-button">Go To Home</a>
</div>
