
@using ProjectMVC.ViewModel;

@{
    ViewData["Title"] = "NewJob";
    Layout = "_Job_ListLayout";
}

<h1>New Job</h1>
@model JobWithCategoryNameVm
<div class="container">
    <h1>New Job</h1>
    <form asp-action="SaveNew" asp-controller="Job" method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" id="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control" id="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Position" class="form-label">Position</label>
            <input asp-for="Position" class="form-control" id="Position" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Location" class="form-label">Location</label>
            <select asp-for="Location" class="form-control" id="Location">
                <option value="">Select Location</option>
                <option value="Cairo">Cairo</option>
                <option value="Alexandria">Alexandria</option>
                <option value="Giza">Giza</option>
                <option value="Shubra El Kheima">Shubra El Kheima</option>
                <option value="Port Said">Port Said</option>
                <option value="Suez">Suez</option>
                <option value="Luxor">Luxor</option>
                <option value="Asyut">Asyut</option>
                <option value="Mansoura">Mansoura</option>
                <option value="Tanta">Tanta</option>
                <option value="Sohag">Sohag</option>
                <option value="Zagazig">Zagazig</option>
                <option value="Aswan">Aswan</option>
                <option value="Damietta">Damietta</option>
                <option value="Damanhur">Damanhur</option>
            </select>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Type" class="form-label">Type</label>
            <select asp-for="Type" class="form-control" id="Type">
                <option value="Full Time">Full Time</option>
                <option value="Part Time">Part Time</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Salary" class="form-label">Salary</label>
            <input asp-for="Salary" class="form-control" id="Salary" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="SelectedCategoryId" class="form-label">Category</label>
            <select asp-for="SelectedCategoryId" class="form-control" id="SelectedCategoryId">
                <option value="">Select Category</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="SelectedCategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="SelectedCompanyId" class="form-label">Company</label>
            <select asp-for="SelectedCompanyId" class="form-control" id="SelectedCompanyId">
                <option value="">Select Company</option>
                @foreach (var company in Model?.Companies)
                {
                    <option value="@company.Id">@company.Name</option>
                }
            </select>
            <span asp-validation-for="SelectedCompanyId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Add New</button>
    </form>
</div>



