
@{
    ViewData["Title"] = "CategoryIndex";
    Layout = "_CategoryLayout";
}

@model List<Category>

<div class="container-xxl py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Explore By Category</h1>
        <a asp-controller="Category" asp-action="New"  class="btn btn-success">Add New Category</a>
        <div class="row g-4">
            @foreach (Category category in Model)
            {
                            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                                        <a asp-controller="Category" asp-action="ShowCategoriesJob" asp-route-categoryId="@category.Id" class="cat-item rounded p-4">
                                    <h6 class="mb-3">@category.Name</h6>
                                    <p class="mb-0">@category.Description </p>
                                </a>

    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-success">Delete</a>
                                    </div>
            }
        </div>
    </div>
</div>




