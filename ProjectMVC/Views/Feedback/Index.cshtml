@model Feedback
 

@{
    ViewData["Title"] = "Index";
    Layout = "_MainLayout";
}
    <div class="row m-5" style="
    justify-content: center;
">
                    <div class="col-md-5 ">
                        <div class="wow fadeInUp" data-wow-delay="0.5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp;">
                                        <div asp-validation-summary="All" class="text-danger"></div>

                            <form method="post" action="/Feedback/Add">

                                    <div class="col-12">
                                        <div class="form-floating">
                                            <textarea class="form-control" name="Message" placeholder="Leave a message here" id="message" style="height: 250px"></textarea>
                                            <label for="message">Give us You Feedback</label>
                                            <span asp-validation-for="Message" class="text-danger"></span>
                                         </div>
                                    </div>
                                      <input type="hidden" value="@ViewBag.userid" name="UserId" />
 
                                    <div class="col-12 mt-4">
                                        <button class="btn btn-primary w-100 py-3 rounded mb-5" type="submit">Send Message</button>

                                   </div>
 

</form>

                         </div>
                        </div>
                    <div class="col-lg-5 col-md-5 col-12" style="margin-top:17px">
                                                <div class="wow fadeInUp" data-wow-delay="0.5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp;">

                                        <img src="/img/feedback.PNG" style="height:100%" class="img-fluid">
                                        </div>
                                     </div>
                                    </div>
  <!-- Testimonial Start -->
 
     <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">


            <div class="container">
                <h1 class="text-center mb-5">Our Clients Say!!!</h1>
                <div class="owl-carousel testimonial-carousel">

            @foreach (Feedback feedback in ViewBag.feedbacks)
            {
                    <div class="testimonial-item bg-light rounded p-4">
                            <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
                            <p>@feedback.Message</p>
                            <div class="d-flex align-items-center">
                                <img class="img-fluid flex-shrink-0 rounded" src="/img/@feedback.User.Image" style="width: 50px; height: 50px;">
                                <div class="ps-3">
                                    <h5 class="mb-1">@feedback.User.UserName</h5>
                                    <small>Profession</small>
                                </div>
                            </div>
                        </div>
            }
         </div>
         </div>
    </div>
 
                    
        <!-- Testimonial End -->

 
