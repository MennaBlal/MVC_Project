@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;

}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/ProjectMVC.styles.css" asp-append-version="true" />
<section class="vh-100 d-flex justify-content-center align-items-center" style="margin-top:70px">
    <form enctype="multipart/form-data" id="registerForm" style="margin-top:70px" class="card text-black p-md-5" asp-route-returnUrl="@Model.ReturnUrl" method="post">

        <div asp-validation-summary="All" class="text-danger mb-4" role="alert"></div>

        <div class="row">
            <p class="text-center h1 fw-bold mb-5">Register</p>
            <div class="col-md-6 mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user fa-fw"></i></span>
                    <input asp-for="Input.FirstName" maxlength="100" class="form-control" autocomplete="username" placeholder="First Name" />
                </div>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user fa-fw"></i></span>
                    <input asp-for="Input.LastName" maxlength="100" class="form-control" autocomplete="username" placeholder="Last Name" />
                </div>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-envelope fa-fw"></i></span>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock fa-fw"></i></span>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-key fa-fw"></i></span>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Repeat your password" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-phone fa-fw"></i></span>
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="new-password" placeholder="Phone Number" />
            </div>
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-image fa-fw"></i></span>
                <input asp-for="Input.PictureProfile" class="form-control" type="file" accept="image/*" onchange="changeImage(event)" />
            </div>
            <span asp-validation-for="Input.PictureProfile" class="text-danger"></span>
        </div>

        <div class="text-center mb-4">
            <img id="PictureProfile" alt="Profile Picture" class="img-thumbnail" src="~/images/img2.jpg" />
        </div>

        <div class="text-center">
            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Register</button>
        </div>
    </form>
</section>


<script>
    function changeImage(event) {
        var img = document.getElementById("PictureProfile");
        var file = event.target.files[0]; // Access the file from the event

        if (file) {
            img.src = window.URL.createObjectURL(file);
        }
    }

</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
